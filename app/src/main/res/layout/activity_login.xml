<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/layout_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_launcher"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/login_userName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textCapSentences"
            android:fontFamily="serif"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:hint="Hall Ticket No."
            android:textColorHint="@color/transparentBG"
            android:textColor="@color/main_btn_bg"
            android:background="@drawable/round_corner_btn"
            android:layout_marginTop="20dp"
            android:lines="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:hint="Password"
            android:textColorHint="@color/transparentBG"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="serif"
            android:textColor="@color/main_btn_bg"
            android:background="@drawable/round_corner_btn"
            android:layout_marginTop="20dp"
            android:lines="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>




            <Button
                android:text="@string/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_btnLogin"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:textColor="@color/transparentBG"
                android:background="@drawable/round_corner_btn"
                android:layout_marginTop="40dp"/>
            <!--<Button
                android:visibility="gone"
                android:text="Default Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_btnDefaultLogin"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:background="@drawable/round_corner_btn"
                android:textColor="@color/main_btn_bg"
                android:layout_marginTop="20dp"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_marginTop="15dp">

        <Button
            android:text="@string/btn_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_btnRegister"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:fontFamily="serif"
            android:background="@drawable/round_corner_btn"
            android:textColor="@color/transparentBG"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:text="Forget Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_btnForgetPassword"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:fontFamily="serif"
            android:background="@drawable/round_corner_btn"
            android:textColor="@color/transparentBG"/>



    </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</ScrollView>

